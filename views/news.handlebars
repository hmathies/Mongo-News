<main class="row" id="newsPage">
  <div id="newsInfo" class="container-fluid">



    <!-- dynamically load the title of the article and the article-->
    <h4 id="newsTitle"></h4>
    <p id="newsArticle"></p>
    <p><a target="_blank" id="newsLink">Click here to read the full article</a></p>

  </div>

  <div>
    <!-- the link back to the home page -->
    <button id="homeButton" onClick="window.history.go(-1); return false;" class="btn btn-lg">Read another article</button>
  </div>

  <div id="commentDiv" class="row container">
    <div class="col sm 12">
      <h4>Add Your Comments Here</h4>
      <!-- dynamically input the comments and associated users-->
      <input id="name" type="text" class="textwrapper" placeholder=" Your Name">
      <p><textarea id="comment" rows="5" class="textwrapper" placeholder=" Your Comment"></textarea></p>
      <div>
        <button id="addComment" class="btn btn-s">Add Comment</button>
      </div>
    </div>
  </div>




  <div>
    <h4>Comments</h4>
    <!-- dynamically load the comments and associated users-->
    <div id="comments">

    </div>
  </div>



</main>